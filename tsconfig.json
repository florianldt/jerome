{
    "compilerOptions": {
        "target": "es6",
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": "./src",
        "outDir": "./dist"
    },
    "exclude": ["node_modules", "**/*.test.ts"]
}
